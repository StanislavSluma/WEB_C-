@{

}
<div id="catalog">
	<div>
		<Pager current-page="@Model.CurrentPage"
			   total-pages="@Model.TotalPages"
			   admin="true"></Pager>
	</div>
	<table class="table">
		<thead>
			<tr>
				<th scope="col">Name</th>
				<th scope="col">Description</th>
				<th scope="col">Category</th>
				<th scope="col">SeriesAmount</th>
				<th scope="col">SeriesTime</th>
				<th scope="col">TotalTime</th>
				<th scope="col"></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model.Anime)
			{
				<tr>
					<td scope="row">@item.Name</td>
					<td scope="row">@item.Description</td>
					<td scope="row">@item.Category.Name</td>
					<td scope="row">@item.SeriesAmount</td>
					<td scope="row">@item.SeriesTime</td>
					<td scope="row">@item.TotalTime</td>
					<td><img src="@item.Image" style="max-width:150px;" /></td>
					<td>
						<a class="btn btn-warning" role="button" asp-page="./Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i> Edit</a>
						<a class="btn btn-info" role="button" asp-page="./Details" asp-route-id="@item.Id"><i class="fas fa-info"></i> Details</a>
						<a class="btn btn-danger" role="button" asp-page="./Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i> Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>