﻿
@inject IDataService dataService

@if (SelectedItem is not null)
{
	<div class="card rounded-custom mb-3" style="max-width: fit-content;">
		<div class="card-header">
			@if (!string.IsNullOrEmpty(SelectedItem.Image))
			{
				<img src="@SelectedItem.Image" class="card-img-top" alt="Lego Set Image" style="max-width:300px;"/>
			}
		</div>
		<div class="card-body">
			<h2>@SelectedItem.Name</h2>
			<p>@SelectedItem.Description</p>
			<p>Amount of series: @SelectedItem.SeriesAmount</p>
			<p>Series time: @SelectedItem.SeriesTime</p>
			<p>Total time: @SelectedItem.TotalTime</p>
		</div>
	</div>
}


@code {

	[Parameter]
	public Anime SelectedItem { get; set; }

	protected override void OnInitialized()
	{
		
	}
}
