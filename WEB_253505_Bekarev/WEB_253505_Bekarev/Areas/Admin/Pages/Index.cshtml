@page
@model WEB_253505_Bekarev.Areas.Admin.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" role="button" asp-page="Create"><i class="fas fa-plus"></i> Create new</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Anime.Items[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Anime.Items[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Anime.Items[0].CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Anime.Items[0].SeriesAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Anime.Items[0].SeriesTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Anime.Items[0].TotalTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Anime.Items[0].Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Anime.Items) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeriesAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeriesTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalTime)
            </td>
            <td>
                <img src="@item.Image" height="200" class="card-img-top">
            </td>
            <td>
                    <a class="btn btn-warning" role="button" asp-page="./Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i> Edit</a>
                    <a class="btn btn-info" role="button" asp-page="./Details" asp-route-id="@item.Id"><i class="fas fa-info"></i> Details</a>
                    <a class="btn btn-danger" role="button" asp-page="./Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i> Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
